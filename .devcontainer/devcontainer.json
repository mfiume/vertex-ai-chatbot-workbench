{
  "name": "Vertex AI Chatbot for Verily Workbench",
  "image": "node:20-bullseye",

  "runArgs": [
    "--network=app-network",
    "--name=application-server"
  ],

  "forwardPorts": [3000],

  "portsAttributes": {
    "3000": {
      "label": "Vertex AI Chatbot",
      "onAutoForward": "notify"
    }
  },

  "containerEnv": {
    "VERTEX_AI_LOCATION": "us-central1",
    "VERTEX_AI_MODEL": "gemini-1.5-flash",
    "PORT": "3000"
  },

  "postCreateCommand": "echo 'Container created. Binary ready at /workspace/bin/chatbot-server'",

  "postStartCommand": "/bin/bash /workspace/.devcontainer/post-startup.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "googlecloudtools.cloudcode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/gcloud:1": {
      "version": "latest"
    }
  },

  "remoteUser": "node"
}
